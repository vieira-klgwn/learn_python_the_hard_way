[project]
name = "test-project"
version = "1.0.0"
description = "A test project for learning Python packaging"
requires-python = ">=3.8"
dependencies = []
license = {text = "MIT"}

[project.scripts]
test-project = "test_project:main"

[project.optional-dependencies]
test = [
    "pytest>=7.0",
]

[build-system]
requires = [
    "setuptools>=61.0",
    "wheel",
]
build-backend = "setuptools.build_meta"